.row.justify-content-md-center
  .col-md-8
    %h2 Sign up
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.hidden_field :product_id, value: params[:product] || Product.first.try(:id)
      = f.hidden_field :plan_id, value: params[:plan] || Product.first.plans.first.try(:id)
      = devise_error_messages!
      = f.input :email, autofocus: true, required: true
      .row.form-group
        .col-6
          = f.input :first_name, required: true
        .col-6
          = f.input :last_name, required: true
      - min_pword_string = @minimum_password_length ? "Password (#{@minimum_password_length} characters minimum)" : 'Password'
      = f.input :password, label: min_pword_string, autocomplete: 'new-password'
      .actions
        = f.submit "Begin your free trial", class: 'btn btn-primary'
